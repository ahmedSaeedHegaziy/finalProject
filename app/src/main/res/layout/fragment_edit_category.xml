<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".doctor.EditCategoryFragment">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@drawable/shape_toolbar"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            tools:src="@tools:sample/avatars" />

        <Button
            android:id="@+id/bAddImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="sans-serif-condensed"
            android:scrollbarSize="28sp"
            android:text="أضف صورة المرض"
            android:textColor="@color/colorSeconderyText"
            android:textStyle="bold" />

    </RelativeLayout>


    <EditText
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="225dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:hint="أسم المرض"
        android:inputType="textPersonName"
        android:background="@drawable/edit_text_background"
        android:padding="10dp"
        android:textStyle="bold"
        app:hintEnabled="false" />

    <EditText
        android:id="@+id/txtDescription"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/txtName"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:hint="وصف المرض"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textStyle="bold"
        app:hintEnabled="false" />

    <EditText
        android:id="@+id/txtDoctorName"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/txtDescription"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:hint="أسم الدكتور"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textStyle="bold"
        app:hintEnabled="false" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDoctorName"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/white"
        android:background="@drawable/theme_button"
        android:text="حفظ التعديل"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnAdd"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/theme_button"
        android:backgroundTint="@color/red"
        android:text="حذف التصنيف!!"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>