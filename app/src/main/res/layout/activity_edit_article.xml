<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".view.EditArticleActivity">

        <EditText
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="20dp"
            android:ems="10"
            android:hint="الأسم"
            android:background="@drawable/edit_text_background"
            android:padding="10dp"
            android:inputType="textPersonName"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:ems="10"
            android:hint="الوصف"
            android:background="@drawable/edit_text_background"
            android:padding="10dp"
            android:inputType="textPersonName"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtName" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="حفظ التغيرات"
            android:backgroundTint="#A45BBAAD"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btnDelete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#A4F94C66"
            android:text="حذف المقال!"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/bAddImg"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#A45BBAAD"
            android:text="أضف صورة"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDescription" />

        <Button
            android:id="@+id/bAddVideo"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="-234dp"
            android:backgroundTint="#A45BBAAD"
            android:text="أضف فيديو"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/bAddImg"
            app:layout_constraintStart_toEndOf="@+id/bAddImg" />

        <Button
            android:id="@+id/bAddAudio"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginEnd="-235dp"
            android:backgroundTint="#A45BBAAD"
            android:text="أضف صوت"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/bAddImg"
            app:layout_constraintEnd_toStartOf="@+id/bAddImg" />

        <ImageView
            android:id="@+id/imgAudio"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@+id/bAddAudio"
            app:layout_constraintTop_toBottomOf="@+id/bAddAudio"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@+id/bAddImg"
            app:layout_constraintTop_toBottomOf="@+id/bAddImg"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imgVideo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@+id/bAddVideo"
            app:layout_constraintTop_toBottomOf="@+id/bAddVideo"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/img1"
            android:layout_width="212dp"
            android:layout_height="154dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="100dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img"
            tools:src="@tools:sample/avatars" />


    </androidx.constraintlayout.widget.ConstraintLayout>